    <select id="profile" parameterType="java.lang.String" resultMap="profileMap">
        SELECT U.ID,
               U.WORK_ID,
               U.ACCT,
               U.NAME_ZH,
               U.PHONE,
               U.EMAIL,
               U.ICON_URL,
               U.POS_ID,
               U.DPT_ID,
               U.REMARK,
               U.BEGIN_DATE,
               U.CONVERT_DATE,
               U.WORK_STAT,
               U.GENDER,
               R.ID AS RID,
               R.ROLE,
               R.ROLE_NAME
        FROM CV_USER U LEFT JOIN CV_USER_ROLE UR ON UR.USER_ID = U.ID LEFT JOIN CV_ROLE R ON R.ID = UR.ROLE_ID
        WHERE U.IDCARD_NO = #{idCardNo,jdbcType=VARCHAR}
    </select>

