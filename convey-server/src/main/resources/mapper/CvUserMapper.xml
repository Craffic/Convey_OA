    <select id="queryUsersByCondition" resultMap="BaseResultMap">
        SELECT * FROM (
        　　SELECT A.*, rownum r FROM (
        　　　　SELECT <include refid="BaseColumns" />
                 FROM CV_USER U
                WHERE 1=1
                  <if test="user.acct != null and user.acct != ''">
                      AND (U.ACCT LIKE CONCAT(CONCAT('%', #{user.acct}), '%') OR U.NAME_ZH LIKE CONCAT(CONCAT('%', #{user.acct}), '%'))
                  </if>
        　　) A WHERE rownum &lt;= #{user.endRecord,jdbcType=NUMERIC}
        ) B WHERE r > #{user.startRecord,jdbcType=NUMERIC}
    </select>

